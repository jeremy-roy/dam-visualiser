rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /shapefiles/{file=**} {
      // Allow public read access to shapefiles directory
      allow read: if true;
    }
    match /timeseries/{file=**} {
      // Allow public read access to timeseries directory
      allow read: if true;
    }
    match /service_alerts/{file=**} {
      // Allow public read access to service alerts directory
      allow read: if true;
    }
    match /{allPaths=**} {
      // Only allow write access from authenticated service accounts (your Python upload script)
      allow write: if request.auth != null && request.auth.token.firebase.sign_in_provider == "service_account";
    }
  }
}
